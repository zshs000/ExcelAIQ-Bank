<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhoushuo.eaqb.excel.parser.biz.domain.mapper.ExcelPreUploadRecordDOMapper">

    <resultMap id="BaseResultMap" type="com.zhoushuo.eaqb.excel.parser.biz.domain.dataobject.ExcelPreUploadRecordDO">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="user_id" property="userId" jdbcType="BIGINT" />
        <result column="file_name" property="fileName" jdbcType="VARCHAR" />
        <result column="file_size" property="fileSize" jdbcType="BIGINT" />
        <result column="verify_status" property="verifyStatus" jdbcType="VARCHAR" />
        <result column="error_messages" property="errorMessages" jdbcType="LONGVARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, file_name, file_size, verify_status, error_messages, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.zhoushuo.eaqb.excel.parser.biz.domain.dataobject.ExcelPreUploadRecordDO">
        INSERT INTO excel_pre_upload_record
        (id, user_id, file_name, file_size, verify_status, error_messages, create_time, update_time)
        VALUES
            (#{id}, #{userId}, #{fileName}, #{fileSize}, #{verifyStatus}, #{errorMessages}, #{createTime}, #{updateTime})
    </insert>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM excel_pre_upload_record
        WHERE id = #{id}
    </select>

    <!-- 可选：根据用户ID查询预上传记录的方法 -->
    <select id="selectByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM excel_pre_upload_record
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
        LIMIT #{limit, jdbcType=INTEGER}
    </select>

    <!-- 可选：根据时间清理过期记录的方法 -->
    <delete id="deleteByCreateTimeBefore" parameterType="java.time.LocalDateTime">
        DELETE FROM excel_pre_upload_record
        WHERE create_time <![CDATA[ < ]]> #{createTime}

    </delete>
</mapper>